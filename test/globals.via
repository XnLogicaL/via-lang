## Global declaration
global x = 10
print(x)

## Global arithmetics
global y = 5
global result = x + y
print(result)

## Scoped variables
do {
  global n = 15
  print(n)
}

## Global types
global intVar: int = 10
print(type intVar)
print(intVar)

global floatVar: float = 1.0
print(type floatVar)
print(floatVar)

global boolVar: bool = true
print(type boolVar)
print(boolVar)

global stringVar: string = "Hello"
print(type stringVar)
print(stringVar)

## nameof
global thisIsACoolName = 10
print(nameof thisIsACoolName)